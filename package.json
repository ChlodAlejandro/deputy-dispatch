        "types-mediawiki": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.25.0",
        "bunyan": "^1.8.15",
        "bunyan-format": "^0.2.1",
        "compression": "^1.7.4",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mwn": "^1.11.5",
        "swagger-ui-express": "^4.6.0",
        "tsoa": "^5.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "wikimedia-streams": "^0.4.0"
    }
