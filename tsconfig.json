{
    "compilerOptions": {
        "experimentalDecorators": true,
        "incremental": true,
        "target": "es6",
        "module": "CommonJS",
        "outDir": "./build",

        "allowJs": false,
        "esModuleInterop": true,
        "inlineSources": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}